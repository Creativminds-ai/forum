{
    "name": "creativminds/forum",
    "description": "A simple forum package for your laravel app",
    "license": "MIT",
    "authors": [
        {
            "name": "Santiago Barbat",
            "email": "barbatsan@gmail.com"
        }
    ],
    "require": {
        "laravel/framework": "^5.8 || ^6|| ^7|| ^8",
        "laravel/passport": "^7 || ^8||^9",
        "mews/purifier": "^3.1||^4",
        "cviebrock/eloquent-sluggable": "^4 || ^6|| ^7"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.5|^8.0|^9",
        "orchestra/testbench": "^3.8|^4",
        "orchestra/testbench-dusk": "^3.8|^4",
        "behat/behat": "^3.5|^4",
        "behat/mink": "^1.7|^2",
        "behat/mink-extension": "^2.3|^3",
        "laracasts/behat-laravel-extension": "^1.1|^2"
    },
    "autoload": {
	    "psr-4": {
	        "Chatter\\Core\\": "src/"
		}
	},
    "autoload-dev": {
        "psr-4": {
            "Chatter\\Core\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Chatter\\Core\\ChatterServiceProvider"
            ]
        }
    }
}
